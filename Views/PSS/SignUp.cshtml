@model FYP.Models.Users

@{
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
    List<dynamic> mt = ViewData["mt"] as List<dynamic>;
    mt.RemoveAt(0);
    mt.Insert(0, new { value = "", text = "-- SELECT --" });
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignUp</title>

</head>
<body>

<form asp-action="SignUp">
    <div class="form-horizontal">
        <h2 style="text-align:center">Sign Up</h2>
        <hr />
        
        <span style="color:red;left:50px; position:absolute">@TempData["MsgSignUp"] </span><br /><br />
        
        <div class="form-group">
            <label asp-for="FullName" class="col-sm-2 control-label">Full Name</label>
            <div class="col-sm-8">
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="col-sm-2 control-label"></label>
            <div class="col-sm-8">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="col-md-2 control-label"></label>
            <div class="col-sm-8">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="ConfirmPassword">Confirm Password </label>
            <div class="col-sm-8">
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>
            <div class="has-error">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create Account" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div class="col-md-offset-2 col-md-10">
    <a href="javascript:history.back()">Return Back</a>
</div>

<div id="JustAEmptySpaceForNeatPurpose" style="height:90px">
</div>

</body>
</html>
