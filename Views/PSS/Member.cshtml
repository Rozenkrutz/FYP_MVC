@model Users

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function Return() {
        window.history.back();
    }
</script> 

<form class="form-horizontal" asp-action="@ViewData["PostTo"]">
    @if (ViewData["ButtonText"].ToString().Equals("Member") == false)
    {
        <div class="form-group">
            <label class="control-label col-sm-3" asp-for="MembershipNo">Membership Number :</label>
            <div class="col-sm-5">
                <input asp-for="MembershipNo" class="form-control" readonly="readonly" />
            </div>

        </div>

    }

    <div class="form-group">
        <label class="control-label col-sm-3" asp-for="FullName">Full Name: </label>
        <div class="col-sm-5">
            <input asp-for="FullName" class="form-control" readonly="readonly" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-3" asp-for="Email">Email :</label>
        <div class="col-sm-5">
            <input asp-for="Email" class="form-control" readonly="readonly" />
        </div>
    </div>
 
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-1">
            <input type="submit" class="btn btn-primary" value="@ViewData["ButtonText"]" />
        </div>

        <div class="col-sm-3">
            <input type="button" class="btn btn-danger" value="Cancel" onclick="Return()" />
        </div>

    </div>
</form>