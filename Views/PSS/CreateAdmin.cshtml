@model FYP.Models.Users

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
     $(function () {
                $("form").submit(function () {
                if (confirm("Are you sure you want to proceed?") == false) {
                    event.preventDefault();
                    event.stopPropagation();
                    return false;
                }
                });
            })
</script>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>New Admin User</title>
</head>
<body>
    <div class="shift">
        <form asp-action="CreateAdmin">
            <div class="form-horizontal">
                <h2 style="color:dimgray">Create New Admin Users</h2><br />
                <hr />

                <div class="form-group">
                    <label asp-for="FullName" class="col-sm-2 control-label">Full Name</label>
                    <div class="col-sm-8">
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="col-sm-2 control-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="col-md-2 control-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" asp-for="ConfirmPassword">Confirm Password </label>
                    <div class="col-sm-8">
                        <input asp-for="ConfirmPassword" class="form-control" />
                    </div>
                    <div class="has-error">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create Account" class="btn btn-default" />
                    </div>
                </div>

                <div class="col-md-offset-2 col-md-10">
                    <a asp-controller="PSS" asp-action="MemberIndex">Return back</a>
                </div>

                <div id="JustAEmptySpaceForNeatPurpose" style="height:60px">
                </div>
            </div>
        </form>
    </div>

</body>
</html>
